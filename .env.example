# runtime
ENV=prod
LOG_LEVEL=INFO
HTTP_HOST=0.0.0.0
HTTP_PORT=8000
USE_REDIS=true
EXTERNAL_BASE_URL=https://your.domain.tld

# vault config
VAULT_ADDR=https://vault.your.domain.tld
VAULT_ROLE_ID=...
VAULT_SECRET_ID=...
VAULT_KV_MOUNT=kv
VAULT_TTL_SECONDS=60

# TLS (either true/false or path to CA bundle)
VAULT_VERIFY=/etc/ssl/certs/your_ca.pem
# or VAULT_VERIFY=true